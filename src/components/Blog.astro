---
// Blog.astro
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');

const posts = allPosts
  .map((entry) => {
    const publishedDate = entry.data.date ?? entry.data.pubDate ?? new Date(0);
    const slug = entry.id.replace(/\.md$/, '');

    return {
      href: `/blog/${slug}/`,
      date: publishedDate.toISOString().slice(0, 10),
      dateDisplay: publishedDate.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric',
      }),
      tag: entry.data.tag ?? 'Blog',
      title: entry.data.title,
      excerpt: entry.data.excerpt ?? entry.data.description ?? '',
      author: entry.data.author,
    };
  })
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime())
  .map((post) => ({
    ...post,
    id: post.href.replaceAll('/', '-'),
  }));
---

<section id="blog" class="blog" aria-labelledby="blog-heading">
  <div class="blog__inner section-inner">

    <header class="section-header">
      <span class="section-label" aria-hidden="true">Updates</span>
      <h2 id="blog-heading" class="section-title">Latest from the Project</h2>
      <p class="section-intro">
        Research insights, development milestones, and community perspectives â€”
        shared openly as we build.
      </p>
    </header>

    <ul class="blog__grid" role="list">
      {posts.map(post => (
        <li class="post-card" role="listitem">
          <article aria-labelledby={`post-${post.id}`}>
            <div class="post-card__meta">
              <span class="post-card__tag">{post.tag}</span>
              <time class="post-card__date" datetime={post.date}>{post.dateDisplay}</time>
            </div>
            <h3 class="post-card__title" id={`post-${post.id}`}>{post.title}</h3>
            <p class="post-card__excerpt">{post.excerpt}</p>
            <footer class="post-card__footer">
              <span class="post-card__author">By {post.author}</span>
              <a href={post.href} class="post-card__read-more" aria-label={`Read more: ${post.title}`}>
                Read more
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/>
                </svg>
              </a>
            </footer>
          </article>
        </li>
      ))}
    </ul>

    <div class="blog__cta">
      <a href="/blog/" class="btn btn--outline" aria-label="View all project updates">
        View all updates
      </a>
    </div>

  </div>
</section>

<style>
  .blog {
    padding-block: var(--space-xl);
    background: var(--color-surface);
  }

  .section-header {
    max-width: 42.5rem;
    margin-bottom: var(--space-lg);
  }
  .section-label {
    display: inline-block;
    font-size: 0.78rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-primary);
    margin-bottom: 0.6rem;
  }
  .section-title {
    font-size: clamp(1.8rem, 3.5vw, 2.4rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 0.9rem;
  }
  .section-intro {
    font-size: 1.05rem;
    color: var(--color-text-muted);
    line-height: 1.75;
  }

  .blog__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(18.75rem, 1fr));
    gap: 1.5rem;
    list-style: none;
    margin-bottom: var(--space-md);
  }

  .post-card {
    background: var(--color-bg);
    border: 0.0625rem solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 1.75rem;
    display: flex;
    flex-direction: column;
    transition: box-shadow var(--transition), transform var(--transition);
  }
  .post-card:hover {
    box-shadow: 0 0.375rem 1.5rem rgba(42,125,111,0.09);
    transform: translateY(-0.125rem);
  }
  .post-card article {
    display: flex;
    flex-direction: column;
    height: 100%;
    gap: 0.6rem;
  }

  .post-card__meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }
  .post-card__tag {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.07em;
    color: var(--color-tag-text);
    background: var(--color-tag-bg);
    padding: 0.25rem 0.65rem;
    border-radius: 6.1875rem;
  }
  .post-card__date {
    font-size: 0.82rem;
    color: var(--color-text-muted);
  }

  .post-card__title {
    font-size: 1.05rem;
    font-weight: 700;
    line-height: 1.35;
  }

  .post-card__excerpt {
    font-size: 0.93rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    flex: 1;
  }

  .post-card__footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 0.75rem;
    padding-top: 0.75rem;
    border-top: 0.0625rem solid var(--color-border);
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  .post-card__author {
    font-size: 0.82rem;
    color: var(--color-text-muted);
    font-weight: 500;
  }
  .post-card__read-more {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    font-size: 0.88rem;
    font-weight: 600;
    color: var(--color-primary);
    text-decoration: none;
    transition: gap var(--transition);
  }
  .post-card__read-more:hover { gap: 0.55rem; }

  .blog__cta {
    text-align: center;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.75rem;
    border-radius: var(--radius-md);
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    transition: background var(--transition), color var(--transition), box-shadow var(--transition);
    cursor: pointer;
    border: 0.125rem solid transparent;
    min-height: 3rem;
    font-family: var(--font-body);
  }
  .btn:focus-visible {
    outline: 0.1875rem solid var(--color-accent);
    outline-offset: 0.1875rem;
  }
  .btn--outline {
    background: transparent;
    color: var(--color-primary);
    border-color: var(--color-primary);
  }
  .btn--outline:hover { background: var(--color-tag-bg); }
</style>
