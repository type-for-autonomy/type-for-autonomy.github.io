---
// Hero.astro
---
<section class="hero" aria-labelledby="hero-heading">
  <div class="hero__inner section-inner">
    <div class="hero__content">
      <div class="hero__logo">
        <img src="/assets/TYPE/Part 1/Logo Image.png" alt="" aria-hidden="true" />
      </div>
      <h1 class="hero__heading" id="hero-heading">TYPE</h1>
      <p class="hero__sub">Designed for growth.<br />Driven by you.</p>
      <a class="hero__cta btn" href="#mission" >Learn More</a>
    </div>
    <div class="hero__media" aria-hidden="true">
      <img src="/assets/TYPE/Part 1/illustration.gif" alt="" loading="eager" />
    </div>
  </div>
</section>

<style>
  .hero {
    height: 100svh;
    display: flex;
    align-items: center;
  }

  .hero__inner {
    display: flex;
    flex: 1;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
  }

  .hero__content {
    display: grid;
    grid-template-areas: "logo" "heading" "sub" "cta";
    grid-template-columns: 1fr;
    grid-auto-rows: auto;
    }

  .hero__logo img {
    grid-area: logo;
    width: min(5rem, 10vw);
    height: auto;
    object-fit: contain;
  }

  .hero__heading {
    all: unset;
    grid-area: heading;
    font-family: var(--font-body);
    font-size: clamp(8rem, 16vw, 12rem);
    letter-spacing: -0.7rem;
    font-weight: 700;
    line-height: 0.9;
  }

  .hero__sub {
    grid-area: sub;
    color: var(--color-primary);
    font-size: clamp(2.5rem, 6vw, 4rem);
    line-height: 0.8;
    font-family: var(--font-body);
    font-weight: 600;
  }

  .hero__cta {
    grid-area: cta;
    margin-top: clamp(3rem, 10vh, 5rem);
    max-width: clamp(20rem, 20vw, 25rem);
  }

  .hero__media {
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }

  .hero__media img {
    width: min(50rem, 50vw);
  }

  /* Tablet: 48rem (768px) */
  @media (max-width: 48rem) {
    .hero__inner {
      flex-direction: column-reverse;
      justify-content: center;
      align-items: center;
      gap: clamp(1.5rem, 5vh, 3rem);
    }

    .hero__content {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: clamp(0.8rem, 2.5vh, 1.2rem);
    }

    .hero__logo img {
      display: none;
    }

    .hero__heading {
      font-size: clamp(5rem, 10vw, 7rem);
    }
    .hero__cta{
      max-width: none;
      margin-top: 1rem;
    }

    .hero__sub {
      font-size: clamp(2rem, 3.5vw, 4rem);
      max-width: 100%;
    }

    .hero__media {
      justify-content: center;
      flex: 1 0 auto;
    }

    .hero__media img {
      width: clamp(15rem, 70vw, 35rem);
    }
  }

  /* Mobile: 28rem (448px) */
  @media (max-width: 28rem) {
    .hero {
      padding: 2rem 0;
    }

    .hero__content {
      gap: 0.6rem;
      align-items: center;
    }

    .hero__logo img {
      display: none;
    }

    .hero__heading {
      font-size: clamp(2.5rem, 8vw, 4rem);
      letter-spacing: 0;
    }
/* 
    .hero__sub {
      font-size: clamp(0.9rem, 2.8vw, 1.3rem);
    } */

    .hero__cta {
      max-width: none;
      margin-top: 1.5rem;
    }

    .hero__media img {
      width: clamp(12rem, 85vw, 25rem);
    }
  }
</style>
