---
// Footer.astro
---
<footer class="footer" role="contentinfo">
  <div class="footer__inner section-inner" id="footer-involved">
    <div class="footer__left">
     <div class="footer__logo">
        <img src="/assets/TYPE/Part 1/Logo Image.png" alt="" aria-hidden="true" />
      </div>
      <h1>TYPE</h1>
      <h2>Innovate with us</h2>
      <p>Help us shape the future of communication.</p>
      <a href="mailto:research@type-for-autonomy.org" class="btn">Get Involved</a>
    </div>

    <div class="footer__right">
      <img
        class="footer__illustration"
        src="/assets/TYPE/Part 6/illustration.png"
        alt=""
        aria-hidden="true"
        loading="lazy"
      />
      <p class="footer__social-title">Get Social</p>
      <div class="footer__socials" role="list" aria-label="Social links">
        <a href="#" role="listitem" aria-label="Facebook">
          <img src="/assets/TYPE/Part 6/facebook.png" alt="facebook" />
        </a>
        <a href="#" role="listitem" aria-label="Twitter">
          <img src="/assets/TYPE/Part 6/twitter.png" alt="twitter" />
        </a>
        <a href="#" role="listitem" aria-label="Instagram">
          <img src="/assets/TYPE/Part 6/instagram.png" alt="instagram" />
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    min-height: 100svh;
    display: flex;
    align-items: center;
    background: var(--color-bg);
    padding-block: clamp(2.6rem, 6vw, 4.4rem);
  }

  .footer__inner {
    display: flex;
    justify-content: space-around;
    align-items: center;
  }

  .footer__left {
    display: grid;
    grid-template-areas: "logo" "heading" "sub" "description" "cta";
    grid-template-columns: 1fr;
    grid-auto-rows: auto;
    gap: clamp(1rem, 2vh, 1.5rem);
    align-items: center;
    font-weight: 600;
  }

  .footer__logo {
    grid-area: "logo";
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text);
    text-decoration: none;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    width: fit-content;
  }

  .footer__logo img {
     grid-area: logo;
    width: min(5rem, 10vw);
    height: auto;
    object-fit: contain;
  }
 
  .footer h1 {
    all: unset;
    grid-area: "heading";
    font-family: var(--font-body);
    font-size: clamp(8rem, 16vw, 12rem);
    letter-spacing: -0.7rem;
    line-height: 0.9;
    font-weight: 700;
  }

  .footer h2 {
    grid-area: "sub";
    font-family: var(--font-body);
    font-size: clamp(2.5rem, 6vw, 4rem);
    margin: 0;
    line-height: 0.8;
    letter-spacing: -0.02em;
    font-weight: 600;
  }

  .footer p {
    grid-area: "description";
    color: var(--color-primary);
    max-width: 100%;
    margin: 0;
    font-size: clamp(1.2rem, 2.3vw, 1.8rem);
    line-height: 1.4;
    font-family: var(--font-body);
    font-weight: 500;
  }

  .footer__left .btn {
    grid-area: "cta";
    width: fit-content;
  }

  .footer__right {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: clamp(1.5rem, 3vh, 2.5rem);
    overflow: visible;
  }

  .footer__illustration {
    width: 30vw;
    height: auto;
    object-fit: contain;
  }

  .footer__social-title {
    text-transform: uppercase;
    letter-spacing: 0.065em;
    color: var(--color-primary);
    margin: 0;
    font-weight: 700;
    font-size: clamp(0.85rem, 1.5vw, 1rem);
  }

  .footer__socials {
    display: flex;
    gap: clamp(0.75rem, 2vw, 1.5rem);
  }

  .footer__socials a {
    width: clamp(1.4rem, 3vw, 1.8rem);
    height: clamp(1.4rem, 3vw, 1.8rem);
    display: grid;
    place-items: center;
    text-decoration: none;
  }

  .footer__socials img {
    width: 5rem;
    height: 100%;
    object-fit: contain;
  }

  /* Tablet: 48rem (768px) */
  @media (max-width: 48rem) {
    .footer__inner {
      display: flex;
      flex-direction: column-reverse;
      gap: clamp(2rem, 4vh, 2.5rem);
    }

    .footer__left {
      display: flex
      flex-direction: column-reverse;
      align-items: center;
    }

    .footer__left h1 {
      font-size: clamp(3rem, 10vw, 5rem);
      letter-spacing: -0.3rem;
    }

    .footer__left h2 {
      font-size: clamp(2rem, 6vw, 3.5rem);
    }

    .footer__left p {
      font-size: clamp(1rem, 2.5vw, 1.5rem);
    }

    .footer__right {
      gap: clamp(1rem, 2vh, 1.5rem);
    }

    .footer__illustration {
      width: clamp(15rem, 70vw, 30rem);
    }

    .footer__social-title {
        display: none;
    }

    .footer__socials {
      display: none;
    }
  }

  /* Mobile: 28rem (448px) */
  @media (max-width: 28rem) {
    .footer {
      min-height: auto;
      padding-block: 1.5rem;
    }

    .footer__inner {
       display: flex;
      flex-direction: column-reverse;
      gap: clamp(2rem, 4vh, 2.5rem);
    }

    .footer__left {
    display: flex;
    flex-direction: column;
      gap: 0.6rem;
      align-items: center;
    }

    .footer__left h1 {
      font-size: clamp(2rem, 8vw, 3.5rem);
      letter-spacing: -0.15rem;
    }

    .footer__left h2 {
      font-size: clamp(1.5rem, 5vw, 2.5rem);
    }

    .footer__left p {
      font-size: clamp(0.9rem, 2vw, 1.2rem);
    }

    /* .footer__left .btn {
      font-size: 0.75rem;
      padding: 0.45rem 1.2rem;
      min-height: 2.4rem;
      margin-top: 1rem;
    } */

    .footer__right {
      gap: 1rem;
    }

    .footer__illustration {
      width: clamp(12rem, 85vw, 20rem);
    }

    .footer__social-title {
        display: none;
    }

    .footer__socials {
        display: none;
    }

    .footer__socials a {
      width: clamp(1rem, 2vw, 1.3rem);
      height: clamp(1rem, 2vw, 1.3rem);
    }

    .footer__socials img {
      width: 100%;
    }
  }
</style>